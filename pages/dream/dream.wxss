.dream-page {
  padding: 0 30rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding-top: 40rpx;
}

.card {
  background: rgba(255, 255, 255, 0.95);
  -webkit-backdrop-filter: blur(10rpx);
  backdrop-filter: blur(10rpx);
  padding: 40rpx;
  border-radius: 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.zodiac-section {
  margin-top: 20rpx;
}

.zodiac-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(102, 126, 234, 0.1);
}

.zodiac-title {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.zodiac-icon {
  font-size: 36rpx;
  filter: drop-shadow(0 0 10rpx rgba(102, 126, 234, 0.3));
}

.zodiac-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #4a5568;
  letter-spacing: 1rpx;
}

.zodiac-selector {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 24rpx;
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.zodiac-current {
  font-size: 28rpx;
  font-weight: 500;
}

.zodiac-arrow {
  font-size: 20rpx;
  opacity: 0.8;
}

.zodiac-content-wrapper {
  position: relative;
  min-height: 200rpx;
}

.zodiac-content {
  background: rgba(248, 250, 252, 0.8);
  border-radius: 20rpx;
  padding: 32rpx;
  border-left: 6rpx solid #667eea;
  transition: all 0.3s ease;
}

.zodiac-content.loading {
  background: linear-gradient(90deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
}

.loading-text {
  color: #667eea;
  font-size: 28rpx;
  font-style: italic;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
}

.prediction-text {
  font-size: 30rpx;
  color: #2d3748;
  line-height: 2;
  white-space: normal;
  word-break: break-word;
  letter-spacing: 0.5rpx;
  text-align: justify;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  -webkit-backdrop-filter: blur(20rpx);
  backdrop-filter: blur(20rpx);
  padding: 24rpx 30rpx;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
}

.input-preview {
  background: linear-gradient(135deg, #667eea, #764ba2);
  padding: 32rpx;
  border-radius: 28rpx;
  box-shadow: 0 12rpx 36rpx rgba(102, 126, 234, 0.25);
  transition: all 0.3s ease;
}

.input-preview:active {
  transform: scale(0.98);
}

.placeholder {
  color: rgba(255, 255, 255, 0.9);
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  display: block;
  letter-spacing: 1rpx;
}

.input-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  -webkit-backdrop-filter: blur(8rpx);
  backdrop-filter: blur(8rpx);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 999;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.input-modal.show {
  display: flex;
  opacity: 1;
}

.modal-content {
  width: 85%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.98);
  -webkit-backdrop-filter: blur(20rpx);
  backdrop-filter: blur(20rpx);
  padding: 48rpx;
  border-radius: 32rpx;
  box-shadow: 0 24rpx 80rpx rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transform: translateY(-20rpx);
  animation: modalSlideIn 0.3s ease forwards;
}

@keyframes modalSlideIn {
  to {
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid rgba(102, 126, 234, 0.1);
}

.modal-title {
  font-size: 36rpx;
  color: #4a5568;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.close-btn {
  font-size: 40rpx;
  color: #a0aec0;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.close-btn:active {
  background: rgba(160, 174, 192, 0.1);
  transform: scale(0.9);
}

.input-group {
  margin-bottom: 40rpx;
}

.dream-title {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.2);
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #2d3748;
  margin-bottom: 24rpx;
  background: rgba(248, 250, 252, 0.8);
  transition: all 0.3s ease;
}

.dream-title:focus {
  border-color: #667eea;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.dream-description {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.2);
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2d3748;
  line-height: 1.8;
  background: rgba(248, 250, 252, 0.8);
  transition: all 0.3s ease;
}

.dream-description:focus {
  border-color: #667eea;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.btn-gradient {
  width: 100%;
  padding: 32rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  box-shadow: 0 12rpx 36rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.btn-gradient:active {
  transform: translateY(2rpx);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.btn-gradient::after {
  border: none;
}