.result-page {
  padding: 40rpx 28rpx;
  background: linear-gradient(135deg, #f8f5ff 0%, #f0ebff 100%);
  min-height: 100vh;
  font-family: 'PingFang SC', 'Helvetica Neue', sans-serif;
}

.back-btn {
  font-size: 32rpx;
  color: #7e57c2;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  font-weight: 500;
}

.back-btn::before {
  content: "←";
  margin-right: 8rpx;
}

.dream-image {
  width: 100%;
  height: 420rpx;
  border-radius: 24rpx;
  margin-bottom: 36rpx;
  object-fit: cover;
  box-shadow: 0 8rpx 24rpx rgba(126, 87, 194, 0.12);
}

.dream-interpretation {
  font-size: 32rpx;
  color: #5e35b1;
  line-height: 1.8;
  margin-bottom: 48rpx;
  padding: 32rpx;
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(126, 87, 194, 0.08);
}

.ai-chat {
  background-color: white;
  border-radius: 28rpx;
  padding: 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(126, 87, 194, 0.1);
  border: 1rpx solid rgba(126, 87, 194, 0.08);
}

.chat-messages {
  max-height: 400rpx;
  overflow-y: auto;
  margin-bottom: 28rpx;
  scrollbar-width: none;
}

.chat-messages::-webkit-scrollbar {
  display: none;
}

.message {
  margin-bottom: 24rpx;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  max-width: 80%;
  position: relative;
  font-size: 30rpx;
  line-height: 1.6;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.message.user {
  background: linear-gradient(135deg, #7e57c2 0%, #9575cd 100%);
  color: white;
  margin-left: auto;
  border-bottom-right-radius: 4rpx;
}

.message.assistant {
  background: #f5f2ff;
  color: #5e35b1;
  margin-right: auto;
  border-bottom-left-radius: 4rpx;
}

.message.user::after,
.message.assistant::after {
  content: "";
  position: absolute;
  bottom: 0;
  width: 12rpx;
  height: 12rpx;
  background: inherit;
}

.message.user::after {
  right: -6rpx;
  clip-path: polygon(0 0, 100% 0, 100% 100%);
}

.message.assistant::after {
  left: -6rpx;
  clip-path: polygon(0 0, 0 100%, 100% 0);
}

.chat-input {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.chat-input input {
  flex: 1;
  padding: 24rpx 32rpx;
  border-radius: 24rpx;
  border: 1rpx solid #e0d6ff;
  background-color: #faf7ff;
  font-size: 30rpx;
  color: #5e35b1;
  transition: all 0.3s ease;
}

.chat-input input:focus {
  border-color: #b39ddb;
  box-shadow: 0 0 0 4rpx rgba(179, 157, 219, 0.2);
  outline: none;
}

.btn-send {
  padding: 24rpx 36rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #7e57c2 0%, #9575cd 100%);
  color: white;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(126, 87, 194, 0.2);
  transition: all 0.2s ease;
}

.btn-send:active {
  transform: scale(0.96);
  box-shadow: 0 2rpx 8rpx rgba(126, 87, 194, 0.3);
}
.dream-interpretation-container {
  height: 300rpx; /* 固定高度 */
  margin-bottom: 48rpx;
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(126, 87, 194, 0.08);
  overflow: hidden; /* 隐藏内部滚动条 */
}

.dream-interpretation-content {
  font-size: 32rpx;
  color: #5e35b1;
  line-height: 1.8;
  padding: 32rpx;
  white-space: pre-wrap; /* 保留换行 */
}

/* 隐藏原生滚动条但保持可滚动 */
.dream-interpretation-container ::-webkit-scrollbar {
  display: none;
}